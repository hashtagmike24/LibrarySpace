<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="edu.csusb.libraryspace.BookingActivity"
    android:gravity="top">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Booking Details"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:background="#ff292f4c"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:textSize="38sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filler"
        android:id="@+id/detailsText"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Note: A weekly maximum of 4 hours can be booked."
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name*"
        android:id="@+id/textView9"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please enter your first and last name"
        android:textColor="#C5C5C5"
        android:id="@+id/editText5"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email*"
        android:id="@+id/textView10"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please enter your email here"
        android:textColor="#C5C5C5"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter @coyote.csusb.edu, @csusb.edu address only"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Public Booking Name"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="* Required Fields"
        android:id="@+id/textView6"
        android:layout_below="@+id/editText3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#ffff0023"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp" />
    <TableRow
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#ff292f4c">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button"
            android:textColor="#ffffffff"
            android:background="#ff292f4c"
            android:paddingTop="20dp"
            android:paddingLeft="320dp"
            android:onClick="mainButtonOnClick" />
    </TableRow>
</LinearLayout>
